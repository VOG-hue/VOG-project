  </footer>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/tsparticles/2.12.0/tsparticles.bundle.min.js"></script>
  <script>
    window.addEventListener("DOMContentLoaded", () => {
      tsParticles.load("tsparticles", {
        fullScreen: { enable: true, zIndex: -1 },
        background: { color: "transparent" },
        particles: {
          number: { value: 80, density: { enable: true, area: 800 } },
          color: { value: ["#ffaa00", "#ff6b35"] },
          shape: { type: "circle" },
          opacity: {
            value: 0.8,
            anim: { enable: true, speed: 1, opacity_min: 0.3, sync: false }
          },
          size: {
            value: 3,
            random: true,
            anim: { enable: true, speed: 2, size_min: 1, sync: false }
          },
          move: {
            enable: true,
            speed: 1,
            direction: "none",
            outModes: { default: "bounce" }
          }
        },
        interactivity: {
          events: {
            onHover: { enable: true, mode: "repulse" },
            onClick: { enable: true, mode: "push" }
          },
          modes: {
            repulse: { distance: 100, duration: 0.4 },
            push: { quantity: 4 }
          }
        }
      });
    });

    // Scroll fluide
    let currentScroll = 0;
    let targetScroll = 0;
    const ease = 0.08;

    function smoothScroll() {
      currentScroll += (targetScroll - currentScroll) * ease;
      window.scrollTo(0, currentScroll);
      requestAnimationFrame(smoothScroll);
    }

    window.addEventListener("load", () => {
      currentScroll = window.scrollY;
      targetScroll = window.scrollY;
      smoothScroll();

      window.addEventListener("wheel", (e) => {
        e.preventDefault();
        targetScroll += e.deltaY * 0.8;
        targetScroll = Math.max(0, Math.min(
          document.body.scrollHeight - window.innerHeight,
          targetScroll
        ));
      }, { passive: false });
    });

    // Effets au survol des cartes
    document.querySelectorAll('.card').forEach(card => {
      card.addEventListener('mouseenter', function() {
        this.style.transform = 'translateY(-12px) scale(1.02)';
      });
      
      card.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0) scale(1)';
      });
    });
  </script>
